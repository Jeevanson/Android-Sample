<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.jeevanson.singleviewapplication">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name="example.jeevanson.homescreen.HomeScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="example.jeevanson.customviewscreen.CustomViewActivity" />
        <activity android:name="example.jeevanson.serviceexample.ServiceExampleActivity" />

        <service android:name="example.jeevanson.serviceexample.MyService" />

        <activity android:name="example.jeevanson.boundserviceexample.BoundServiceDemoActivity" />

        <service android:name="example.jeevanson.boundserviceexample.MyBindService" />

        <activity android:name="example.jeevanson.asynctaskdemo.AsynctaskDemoActivity"></activity>
    </application>

</manifest>